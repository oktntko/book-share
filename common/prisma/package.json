{
  "name": "@book-share/prisma",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "exports": {
    "./client": {
      "types": "./src/client/index.ts",
      "default": "./dist/client/index.js"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsup-node",
    "type-check": "tsc --project tsconfig.base.json --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "format": "prettier . --write",
    "generate": "prisma generate && find src/schema -type f | xargs sed -i -e \"s#from 'zod';#from '@book-share/lib/zod';#g\" && prettier src/schema --write",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "tsx src/seed.ts",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@book-share/lib": "workspace:*",
    "@prisma/client": "6.13.0"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.2.0",
    "@eslint/js": "^9.32.0",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prisma": "^6.13.0",
    "prisma-erd-generator": "^2.0.4",
    "tsup": "^8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.39.0",
    "zod-prisma-types": "^3.2.4"
  }
}
