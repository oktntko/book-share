{
  "name": "@book-share/express",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "main": "index.js",
  "exports": {
    ".": {
      "types": "./types/router/_router.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:serve": "tsx watch --tsconfig tsconfig.base.json src/index.ts",
    "dev:type": "nodemon --watch src --exec \"pnpm type-check\" src/index.ts",
    "build": "tsup-node",
    "type-check": "rm -rf types && tsc --project tsconfig.base.json && tsc-alias --project tsconfig.base.json",
    "preview": "node --enable-source-maps --disable-warning=ExperimentalWarning dist/index.js",
    "lint": "eslint src/ --fix",
    "format": "prettier src/ --write",
    "test": "vitest run",
    "test:preview": "vitest --ui"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@book-share/lib": "workspace:*",
    "@book-share/prisma": "workspace:*",
    "@googleapis/books": "^6.0.1",
    "@prisma/client": "^6.13.0",
    "@trpc/server": "^11.4.4",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "log4js": "^6.9.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.2.0",
    "@eslint/js": "^9.33.0",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/qs": "^6.14.0",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
