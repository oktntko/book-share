{
  "name": "book-share-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:serve": "nodemon --verbose --watch src --exec \"node --require @swc-node/register\" src/index.ts",
    "dev:type": "nodemon --watch src --exec \"npm run build:type\" src/index.ts",
    "build": "npm-run-all --parallel build:*",
    "prebuild:src": "rimraf dist",
    "build:src": "swc src --out-dir dist",
    "prebuild:type": "rimraf @types",
    "build:type": "tsc --outDir @types --project tsconfig.type.json && tsc-alias",
    "db": "npm-run-all --sequential db:* format",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate-ut": "DATABASE_URL=postgresql://bs_ut:bs_ut@localhost:${DB_PORT}/bs_ut?schema=bs_ut prisma migrate deploy",
    "db:seed": "node --require @swc-node/register prisma/seed.ts",
    "lint": "eslint --ext .js,.ts src",
    "format": "prettier src --write && find ./src/schema -type f | xargs sed -i \"s@import { z } from 'zod'@import { z } from '~/lib/zod'@g\"",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "@trpc/server": "^10.37.1",
    "dayjs": "^1.11.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "i18next": "^23.4.4",
    "log4js": "^6.9.1",
    "multer": "^1.4.5-lts.1",
    "remeda": "^1.24.0",
    "superjson": "^1.13.1",
    "zod": "^3.21.4",
    "zod-i18n-map": "^2.14.0"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.6.6",
    "@swc-node/register": "^1.6.6",
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.75",
    "@swc/helpers": "^0.5.1",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/qs": "^6.9.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "jest-html-reporter": "^3.10.1",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.10.18",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "prisma": "^5.1.1",
    "prisma-erd-generator": "^1.11.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6",
    "zod-prisma-types": "^2.7.9"
  }
}
