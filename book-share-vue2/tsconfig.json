{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "@routers/*": ["./../book-share-express/types/routers/*"]
    }
  },
  "include": ["src/**/*", "../book-share-express/types/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
